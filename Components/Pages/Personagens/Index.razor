@page "/personagens/index"
@rendermode InteractiveServer
@inject RpgBlazor.Services.PersonagemService PersonagemService
@inject ILocalStorageService LocalStorage
@inject NavigationManager Navigation
@using RpgBlazor.Models
@using Blazored.LocalStorage;
@if (!string.IsNullOrEmpty(mensagem))
{
    <div class="alert alert-sucess">@mensagem</div>
}
else if (!string.IsNullOrEmpty(mensagemErro))
{
    <div class="alert alert-danger">@mensagemErro</div>
}

<PageTitle>Personagens</PageTitle>
<h1>Personagens</h1>
<p>Listagem de Personagens</p>
<NavLink class="btn btn-info" href="/personagens/cadastro">
    <i class="bi bi-plus-lg"></i> Novo
</NavLink>
@if (lista == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Classe</th>
                <th>Pontos de vida</th>
                <th>Disputas</th>
                <th>Vitórias</th>
                <th>Derroas</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var personagem in lista)
            {
                <tr>
                    <td>@personagem.Id</td>
                    <td>@personagem.Nome</td>
                    <td>@personagem.Classe</td>
                    <td>@personagem.PontosVida</td>
                    <td>@personagem.Disputas</td>
                    <td>@personagem.Vitorias</td>
                    <td>@personagem.Derrotas</td>
                    <td>
                        <button class="btn btn-warning btn-sm" @onclick="() => EditarPersonagem(personagem.Id)">
                            <i class="bi bi-pencil"></i> Editar
                        </button>
                    </td>
                </tr>    
            }
        </tbody>
    </table>            
}

@code {

    private List<PersonagemViewModel> lista = null;
    private string mensagem = string.Empty;
    private string mensagemErro = string.Empty;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        try
        {
            if (firstRender)
            {
                await CarregarPersonagens();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            mensagemErro = ex.Message;
        }
    }

    private async Task CarregarPersonagens()
    {
        var token = await LocalStorage.GetItemAsync<string>("UsuarioToken");
        lista = await PersonagemService.GetAllAsync(token);
    }
    private void EditarPersonagem(int id)
    {
        Navigation.NavigateTo($"/personagens/cadastro/{id}");
    }
}